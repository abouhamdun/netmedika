# ========== DATABASE CONFIGURATION ==========
DATABASE_URL=


# ========== APPLICATION SETTINGS ==========
APP_NAME=MedApp API
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=
API_PREFIX=/api/v1


# ========== FILE STORAGE CONFIGURATION ==========
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=uploads

# AWS S3 Settings (commented out since using local storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=

MAX_FILE_SIZE=10485760
IMAGE_QUALITY=85


# ========== AUTHENTICATION & SECURITY ==========
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12


# ========== EMAIL CONFIGURATION ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=medapp.notifications@gmail.com
SMTP_PASSWORD=your-gmail-app-password-here
SMTP_FROM_EMAIL=noreply@medapp.com
SMTP_FROM_NAME=MedApp


# ========== PAYMENT GATEWAY ==========
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_CALLBACK_URL=http://localhost:8000/api/v1/payments/callback


# ========== PRESCRIPTION VERIFICATION ==========
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_PROJECT_ID=


# ========== REDIS CONFIGURATION ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=


# ========== CORS SETTINGS ==========
CORS_ORIGINS=
CORS_ALLOW_CREDENTIALS=True


# ========== LOGGING ==========
LOG_LEVEL=INFO
LOG_FILE=logs/app.log