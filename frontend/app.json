{
  "expo": {
    "name": "netmedika",
    "scheme": "netmedika",
    "slug": "netmedika",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D47A1"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.png",
       "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take prescription photos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to upload prescriptions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.abouhumaida.netmedika",
       "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to upload prescriptions.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take prescription photos."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fb15b9ee-71e2-4b01-b927-c1e22691e2ae"
      }
    }
  }
}
